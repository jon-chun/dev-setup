const pptxgen = require('pptxgenjs');
const html2pptx = require('/Users/jonc/.claude/plugins/marketplaces/anthropic-agent-skills/document-skills/pptx/scripts/html2pptx.js');
const sharp = require('sharp');
const React = require('react');
const ReactDOMServer = require('react-dom/server');
const { FaBalanceScale, FaGavel, FaFileContract, FaUserTie, FaExclamationTriangle, FaHandshake, FaGlobeAmericas } = require('react-icons/fa');

async function rasterizeIconPng(IconComponent, color, size, filename) {
  const svgString = ReactDOMServer.renderToStaticMarkup(
    React.createElement(IconComponent, { color: `#${color}`, size: size })
  );
  await sharp(Buffer.from(svgString)).png().toFile(filename);
  return filename;
}

async function createGradientBg(filename, color1, color2) {
  const svg = `<svg xmlns="http://www.w3.org/2000/svg" width="1440" height="810">
    <defs>
      <linearGradient id="g" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#${color1}"/>
        <stop offset="100%" style="stop-color:#${color2}"/>
      </linearGradient>
    </defs>
    <rect width="100%" height="100%" fill="url(#g)"/>
  </svg>`;
  await sharp(Buffer.from(svg)).png().toFile(filename);
  return filename;
}

async function createFlagPattern(filename) {
  const svg = `<svg xmlns="http://www.w3.org/2000/svg" width="1440" height="810">
    <rect width="100%" height="100%" fill="#292929"/>
    <g opacity="0.08">
      <rect x="0" y="0" width="720" height="810" fill="#E33737"/>
      <rect x="720" y="0" width="720" height="810" fill="#FFFFFF"/>
    </g>
  </svg>`;
  await sharp(Buffer.from(svg)).png().toFile(filename);
  return filename;
}

