  slide10.addNotes(speakerNotes[10]);

  // Slide 11: Legado
  const { slide: slide11 } = await html2pptx('slide11-legado.html', pptx);
  slide11.addNotes(speakerNotes[11]);

  // Slide 12: Reconocimiento
  const { slide: slide12 } = await html2pptx('slide12-reconocimiento.html', pptx);
  slide12.addNotes(speakerNotes[12]);

  // Slide 13: Artwork blank
  const { slide: slide13 } = await html2pptx('slide13-artwork-blank.html', pptx);
  slide13.addNotes(speakerNotes[13]);

  // Slide 14: Desafíos
  const { slide: slide14 } = await html2pptx('slide14-desafios.html', pptx);
  slide14.addNotes(speakerNotes[14]);

  // Slide 15: Futuro
  const { slide: slide15 } = await html2pptx('slide15-futuro.html', pptx);
  slide15.addNotes(speakerNotes[15]);

  // Save presentation
  await pptx.writeFile({ fileName: 'Wifredo_Lam_Retrospectiva_MoMA.pptx' });
  console.log('Presentation created successfully: Wifredo_Lam_Retrospectiva_MoMA.pptx');

  // Also save speaker notes to a separate text file
  let notesText = '# NOTAS DEL PRESENTADOR - WIFREDO LAM RETROSPECTIVA MOMA\n\n';
  notesText += '===============================================================\n\n';

  for (let i = 1; i <= 15; i++) {
    const slideNames = {
      1: 'Portada',
      2: 'Vocabulario Especializado',
      3: 'Espacio para Obra de Arte #1',
      4: 'Contexto Histórico: Infancia y Formación',
      5: 'Contexto Histórico: La Guerra Civil Española',
      6: 'Contexto Histórico: Exilio en París',
      7: 'Contexto Histórico: Segunda Guerra Mundial y Surrealismo',
      8: 'Espacio para Obra de Arte #2',
      9: 'Regreso a Cuba: Reinvención Artística',
      10: 'Situación Actual: La Retrospectiva en el MoMA',
      11: 'Consecuencias: Legado Expandido',
      12: 'Consecuencias: Reconocimiento Tardío',
      13: 'Espacio para Obra de Arte #3',
      14: 'Desafíos Futuros: Marginalización',
      15: 'Desafíos Futuros: Promoción y Educación'
    };

    notesText += `DIAPOSITIVA ${i}: ${slideNames[i]}\n`;
    notesText += '---------------------------------------------------------------\n\n';
    notesText += speakerNotes[i];
    notesText += '\n\n\n';
  }

  const fs = require('fs');
  fs.writeFileSync('Notas_Presentador_Wifredo_Lam.txt', notesText, 'utf8');
  console.log('Speaker notes saved: Notas_Presentador_Wifredo_Lam.txt');
}

createPresentation().catch(console.error);
